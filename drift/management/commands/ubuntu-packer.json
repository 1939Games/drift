{
  "variables": {
    "service": "unknown",
    "region": "eu-west-1",
    "source_ami": "unknown",
    "ami_1": "unknown", "ami_2": "unknown", "ami_3": "unknown", "ami_4": "unknown", "ami_5": "unknown",
    "user_name": "unknown",
    "setup_script": "unknown",
    "domain_name": "unknown"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "m3.medium",
      "iam_instance_profile": "ec2",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `service`}}-{{isotime `2006-01-02-15-04`}}",
      "ami_regions": ["{{user `ami_1`}}", "{{user `ami_2`}}", "{{user `ami_3`}}", "{{user `ami_4`}}", "{{user `ami_5`}}"],

      "tags": {
        "service-name": "{{user `service`}}",
        "creation-date": "{{isotime `2006-01-02-15-04`}}",
        "user-name": "{{user `user_name`}}",
        "domain-name": "{{user `domain_name`}}",
        "source-ami": "{{user `source_ami`}}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "{{user `setup_script`}}",
      "execute_command": "echo 'packer' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ]
}
