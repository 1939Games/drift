{
  "variables": {
    "service": "unknown",
    "region": "eu-west-1",
    "source_ami": "unknown",
    "user_name": "unknown",
    "setup_script": "unknown",
    "domain_name": "unknown",

    "version": "0.0.1",
    "git_branch": "unknown",
    "git_commit": "unknown",
    "git_release": "unknown",
    "git_url": "unknown",
    "config_url": "unknown"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "m3.medium",
      "iam_instance_profile": "ec2",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `service`}}-{{isotime `2006-01-02-15-04`}}",

      "tags": {
        "service-name": "{{user `service`}}",
        "creation-date": "{{isotime `2006-01-02-15-04`}}",
        "user-name": "{{user `user_name`}}",
        "domain-name": "{{user `domain_name`}}",
        "source-ami": "{{user `source_ami`}}",

        "version-number": "{{user `version`}}",

        "drift:manifest:deployable": "{{user `service`}}",
        "drift:manifest:git_branch": "{{user `git_branch`}}",
        "drift:manifest:git_commit": "{{user `git_commit`}}",
        "drift:manifest:git_commit_url": "{{user `git_url`}}",
        "drift:manifest:git_release": "{{user `git_release`}}",
        "drift:manifest:method": "ami",
        "drift:manifest:version": "{{user `version`}}"
      }
    }
  ],

  "provisioners": [
    {
        "type": "file",
        "source": "./dist/{{user `service`}}-{{user `version`}}.zip",
        "destination": "~/{{user `service`}}-{{user `version`}}.zip"
    },
    {
        "type": "file",
        "source": "./dist/deployment-manifest.json",
        "destination": "~/deployment-manifest.json"
    },
    {
      "type": "shell",
      "script": "{{user `setup_script`}}",
      "execute_command": "echo 'packer' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "environment_vars": [
        "service={{user `service`}}",
        "version={{user `version`}}",
        "config_url={{user `config_url`}}"
      ]
    }
  ]
}
